int main() {
    
    
    string dimensions;
    cout << "How many dimensions is your shape (2D/3D): ";
    cin >> dimensions;
    
    string result;
    if (dimensions == "2D" || dimensions == "2d" || dimensions == "2") {
        result = handle2D();
    } else if (dimensions == "3D" || dimensions == "3d" || dimensions == "3") {
        result = handle3D();
    } else {
        result = "Invalid input for dimensions.";
    }
    
    cout << result;
    return 0;
}



