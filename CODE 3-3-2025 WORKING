#include <string>
using namespace std;

// 2D

string squareArea();
string squarePerimeter();
string rectangleArea();
string rectanglePerimeter();
string triangleArea();
string trianglePerimeter();
string trapezoidArea();
string trapezoidPerimeter();
string circleArea();
string circleCircumference();

string handle2D();

// 3D 

